<div class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="newpostlabel"><%= post.get('content_type') === "Picture" ? "Edit " : "New "%> Picture Post!</h4>
      </div>
      <div class="modal-body">
        <form id="form_id">
          <div class="form-group">
            <label for="post-title" class="control-label">Title</label>
            <input type="text" class="form-control" id="recipient-name" name="post[title]" value="<%= post.get('title') %>">
          </div>
          <div class="form-group">
            <label for="message-text" class="control-label">Pick Your Image</label>

            <input type="filepicker" class="pick-blog-image-input" data-fp-mimetype="image/*" name="post[filepicker_url]" data-fp-button-text="Choose Image" data-fp-button-class="btn btn-default">
            <label>Preview</label>
            <img class="post-image-prev" src="" alt="" style="width:100px;height:100px"/>
          </div>
          <div class="form-group">
            <input type="hidden" class="form-control content-type" id="content-type" name="post[content_type]" value="Picture">
            <label for="message-text" class="control-label">Content</label>
            <textarea class="form-control" id="message-text" name="post[body]" value="<%= post.get('body') %>"><%= post.get('body') %></textarea>
          </div>
          <button type="button" class="btn btn-close" data-dismiss="modal">Close</button>
          <input type="submit" id="form_id" class="btn btn-primary" value="Submit">
        </form>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
