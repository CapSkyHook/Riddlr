<div class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <div class="errors">

        </div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="newpostlabel">New Text Post!</h4>
      </div>
      <div class="modal-body">
        <form id="form_id">
          <div class="form-group">
            <label for="post-title" class="control-label">Title</label>
            <input type="text" class="form-control" id="recipient-name" name="post[title]" value="<%= post.get('title') %>">
            <div class="title-errors">
            </div>
          </div>
          <div class="form-group">
            <label for="message-text" class="control-label">Content</label>
            <textarea class="form-control" id="message-text" name="post[body]" value="post[body]"><%= post.get('body') %></textarea>
            <div class="body-errors">

            </div>
          </div>
          <div class="form-group">
            <input type="hidden" class="form-control content-type" id="content-type" name="post[content_type]" value="Text">
          </div>
          <button type="button" class="btn btn-close" data-dismiss="modal">Close</button>
          <input type="submit" class="btn btn-primary" value="Create Text Post!">
        </form>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
